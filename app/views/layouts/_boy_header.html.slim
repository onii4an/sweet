.navbar-header
  = link_to 'Sweet', main_boy_path, class: "navbar-brand"
.collapse.navbar-collapse
  ul.nav.navbar-nav.navbar-left
    = render "layouts/rules"
  ul.nav.navbar-nav.navbar-right
    li.dropdown
      a.dropdown-toggle aria-expanded="false" aria-haspopup="true" data-toggle="dropdown" href="#" role="button"
        | #{current_boy.username}
        span.caret
      ul.dropdown-menu
        li
          = link_to 'Profile', users_path(current_boy.id)
        li
          = link_to 'Account settings', edit_boy_registration_path
        li
          = link_to 'Logout', destroy_boy_session_path, method: :delete